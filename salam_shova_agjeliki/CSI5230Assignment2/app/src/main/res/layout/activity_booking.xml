<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ajgeliki"
    android:orientation="vertical"
    tools:context="edu.csi5230.salamshovaajgeliki.csi5230assignment2.Booking">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="horizontal"
        android:paddingLeft="20dp">


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape1"
            android:text="Restaurant"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text=" Address:
    Lorem ipsum dolor sit amet,
    consectetur"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/button"
            android:layout_weight="0.41" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/textView"
            android:id="@+id/textView2"
            android:text=" Phone:+44 12 3456 789  www.restaurantwebsite.com"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="0.46" />

        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/textView2"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/buttonshape1"
            android:text="Cafe"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/button2"
            android:text="  Address:
    Lorem ipsum dolor sit amet,
    consectetur"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView3"
            android:layout_height="65dp"
            android:text="  Phone:
     +44 12 3456 789
     www.restaurantwebsite.com"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingLeft="20dp">


        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/buttonshape1"
            android:text="Pub"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_below="@+id/button3"
            android:layout_height="65dp"
            android:text="  Address:
     Lorem ipsum dolor sit amet,
     consectetur"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView5"
            android:layout_height="65dp"
            android:text="  Phone:
     +44 12 3456 789
     www.restaurantwebsite.com"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textView6"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/white"/>

    </RelativeLayout>
</LinearLayout>

