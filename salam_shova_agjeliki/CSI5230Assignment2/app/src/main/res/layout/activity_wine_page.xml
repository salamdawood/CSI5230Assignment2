<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.csi5230.salamshovaajgeliki.csi5230assignment2.WinePage">

    <ImageView
        android:id="@+id/image_wine_page_id"
        android:layout_width="390dp"
        android:layout_height="215dp"
        android:background="@drawable/image_wine_page"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="172dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_wine_page_id"
        app:srcCompat="@drawable/best_price_wine_page"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/wine_name"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="22dp"
        android:text="Wine Name is Here two in a row"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_wine_page_id"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/white_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:text="White Wine / 2010"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wine_name"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/wine_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/white_name" />

    <RelativeLayout
        android:id="@+id/wine_page_footer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/glass_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2.00"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/glass_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/glass_price"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/glass_price"
            android:text="Glass" />

        <TextView
            android:id="@+id/bottle_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/glass_price"
            android:text="$19.50"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bottle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bottle_price"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/bottle_price"
            android:text="Bottle" />

        <ImageView
            android:id="@+id/google_logo_wine_page"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/google_logo"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/twitter_logo_wine_page"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/google_logo_wine_page"
            android:background="@drawable/twitter_logo"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/facebook_logo_wine_page"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/twitter_logo_wine_page"
            android:background="@drawable/facebook_logo" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
