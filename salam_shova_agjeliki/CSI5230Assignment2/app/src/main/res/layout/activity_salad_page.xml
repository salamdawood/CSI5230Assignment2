<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.csi5230.salamshovaajgeliki.csi5230assignment2.SaladPage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/soupsalad"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="335dp"
        android:layout_height="45dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="223dp"
        tools:text="THE - TRIO SOUP & SALAD" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="66dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/saladprice"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="154dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="338dp"
        android:layout_height="118dp"
        android:ems="10"
        android:hint="All-natural chicken, applewood smoked bacon, avocado, bleu cheese, tomatoes and green onions tossed with iceberg and romaine lettuce and our sweet and spicy house vinaigrette."
        android:gravity="top|left"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="281dp" />
</android.support.constraint.ConstraintLayout>
