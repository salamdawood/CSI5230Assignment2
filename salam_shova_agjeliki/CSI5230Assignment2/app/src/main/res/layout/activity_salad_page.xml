<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.csi5230.salamshovaajgeliki.csi5230assignment2.SaladPage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="14dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/soupsalad"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="84dp" />

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="110dp"
      android:layout_height="66dp"
      android:layout_marginLeft="260dp"
      android:layout_marginTop="-35dp"
      app:srcCompat="@drawable/saladprice" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="304dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textAllCaps="true"
      android:textSize="18sp"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="13dp"
      tools:layout_editor_absoluteY="256dp"
      tools:text="THE - TRIO SOUP &amp; SALAD" />

  <EditText
      android:id="@+id/editText"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/imageView"
      android:layout_marginLeft="19dp"
      android:layout_marginStart="19dp"
      android:layout_marginTop="10dp"
      android:ems="10"
      android:gravity="top|left"
      android:inputType="textMultiLine"
      android:text="All-natural chicken, applewood smoked bacon, avocado, bleu cheese, tomatoes and green onions tossed with iceberg and romaine lettuce and our sweet and spicy house vinaigrette."
      android:textSize="14sp" />

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/imageView5"

        app:srcCompat="@drawable/fb"
        app:layout_constraintRight_toLeftOf="@+id/imageView5"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        app:srcCompat="@drawable/twitter"
        app:layout_constraintRight_toLeftOf="@+id/imageView3"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        app:srcCompat="@drawable/google"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp" />
  </android.support.constraint.ConstraintLayout>
</LinearLayout>

